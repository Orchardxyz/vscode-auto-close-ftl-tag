{
    "name": "auto-close-ftl-tag",
    "displayName": "Auto Close FTL Tag",
    "description": "Auto Close Tag for ftl file.",
    "version": "1.0.2",
    "author": "Orchard",
    "icon": "assets/logo.png",
    "publisher": "OrcaTeam",
    "engines": {
        "vscode": "^1.49.0"
    },
    "categories": [
        "Other",
        "Programming Languages"
    ],
    "keywords": [
        "AutoComplete",
        "close",
        "tag",
        "ftl"
    ],
    "bugs": {
        "url": "https://github.com/Orchardxyz/vscode-auto-close-ftl-tag/issues",
        "email": "orchardyz@outlook.com"
    },
    "homepage": "https://github.com/Orchardxyz/vscode-auto-close-ftl-tag/blob/master/README.md",
    "repository": {
        "type": "git",
        "url": "https://github.com/Orchardxyz/vscode-auto-close-ftl-tag.git"
    },
    "extensionKind": [
        "ui",
        "workspace"
    ],
    "activationEvents": [
        "*",
        "onCommand:auto-close-ftl-tag.closeTag"
    ],
    "main": "./out/src/extension",
    "capabilities": {
        "untrustedWorkspaces": {
            "supported": true
        },
        "virtualWorkspaces": true
    },
    "contributes": {
        "commands": [
            {
                "command": "auto-close-ftl-tag.closeTag",
                "title": "Close Tag"
            }
        ],
        "keybindings": [
            {
                "command": "auto-close-ftl-tag.closeTag",
                "key": "alt+.",
                "mac": "cmd+alt+."
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Auto Close FTL Tag configuration",
            "properties": {
                "auto-close-ftl-tag.activationOnLanguage": {
                    "type": "array",
                    "default": [
                        "ftl"
                    ],
                    "description": "Set the languages that the extension will be activated.  e.g. [\"html\",\"xml\",\"php\"]. Use [\"*\"] to activate for all languages.",
                    "scope": "resource"
                },
                "auto-close-ftl-tag.disableOnLanguage": {
                    "type": "array",
                    "default": [],
                    "description": "Set the languages where the extension will be disabled.  e.g. [\"html\",\"xml\",\"php\"].",
                    "scope": "resource"
                },
                "auto-close-ftl-tag.excludedTags": {
                    "type": "array",
                    "default": [
                        "area",
                        "base",
                        "br",
                        "col",
                        "command",
                        "embed",
                        "hr",
                        "img",
                        "input",
                        "keygen",
                        "link",
                        "meta",
                        "param",
                        "source",
                        "track",
                        "wbr"
                    ],
                    "description": "Set the tag list that would not be auto closed.",
                    "scope": "resource"
                },
                "auto-close-ftl-tag.SublimeText3Mode": {
                    "type": "boolean",
                    "default": false,
                    "description": "Auto close tag when </ is typed, same as Sublime Text 3",
                    "scope": "resource"
                },
                "auto-close-ftl-tag.enableAutoCloseTag": {
                    "type": "boolean",
                    "default": true,
                    "description": "Whether to insert close tag automatically",
                    "scope": "resource"
                },
                "auto-close-ftl-tag.enableAutoCloseSelfClosingTag": {
                    "type": "boolean",
                    "default": true,
                    "description": "Whether to close self-closing tag automatically",
                    "scope": "resource"
                },
                "auto-close-ftl-tag.insertSpaceBeforeSelfClosingTag": {
                    "type": "boolean",
                    "default": false,
                    "description": "Insert a space before the forward slash in a self-closing tag.",
                    "scope": "resource"
                },
                "auto-close-ftl-tag.fullMode": {
                    "type": "boolean",
                    "default": false,
                    "description": "Enable both Visual Studio and Sublime Text mode",
                    "scope": "resource"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.32",
        "@types/node": "^6.0.40",
        "@types/vscode": "^1.49.0",
        "mocha": "^2.3.3",
        "typescript": "^3.9.10"
    }
}
